package GUI;

import javafx.scene.control.Label;
import javafx.scene.layout.StackPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import javafx.scene.text.Text;

import static GUI.GUI.TILE_SIZE;

public class LetterTile extends Rectangle{
	
	private String letter;
	private double mouseX, mouseY;
	private double oldX, oldY;
	/*
	 * This is the getter for the letter.
	 */
	public String getLetter() {
		return letter;
	}
	
	public LetterTile(String l, int x, int y) {
		letter = l;
		setHeight(TILE_SIZE);
		setWidth(TILE_SIZE);
		setFill(Color.valueOf("d8cecc"));
		setStroke(Color.valueOf("000000"));
		relocate(x * TILE_SIZE, y * TILE_SIZE);
	}
	
}
